<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name</p>
  <h3><%= @user.name %></h3>
  <p>introduction</p>
  <h3><%= @user.introduction %></h3>
  
  <p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>
  
</div>


<!--投稿フォーム-->
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<% @users.each do |user| %>
  <div>
    <p>投稿ユーザー画像：<%= image_tag user.get_profile_image(100,100) %></p>
    <p>ユーザーネーム：<%= user.name %></p>
    <%= link_to "Show", user_path(user.id) %>
  </div>
<% end %>